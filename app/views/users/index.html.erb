<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
  <% @users.each do |usr| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(usr), user_path(usr) %></li>
          <li class="article-title">
            <%= link_to usr.username, user_path(usr) %>
          </li>
          <li><small><%= pluralize(usr.articles.count, "article") if usr.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>