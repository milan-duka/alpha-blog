<h1 align="center">Svi Kibitz Fenster Blogeri</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |usr| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(usr), user_path(usr) %></li>
          <li class="article-title">
            <%= link_to usr.username, user_path(usr) %>
          </li>
          <li><small>broj objava: <%= usr.articles.count %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Obriši korisnika", user_path(usr), method: :delete, 
                data: {confirm: "Da li si siguran da želiš da obrišeš korisnika i sve njegove objave?"}, class: "btn btn-xs btn-danger" %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>