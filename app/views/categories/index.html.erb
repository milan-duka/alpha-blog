<h1 align="center">Sve kategorije</h1>
<div align="center">
  <%= will_paginate  previous_label: "« Prethodna", next_label: "Sledeća »" %>
  <% @categories.each do |cat| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{cat.name}", category_path(cat) %>
          </li>
          <li><small>broj objava: <%= cat.articles.count %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate  previous_label: "« Prethodna", next_label: "Sledeća »" %>
</div>