<h1>Listing all articles</h1>
<p><%= link_to 'Create new article', new_article_path %></p>
<table class="table table-hover">
  <tr>
  <th>Title</th>
  <th>Description</th>
  <th></th>
  <th></th>
  <th></th>
  </tr>
  <% @articles.each do |art| %>
  <tr>
  <td><%= art.title %></td>
  <td><%= art.description %></td>
  <td><%= link_to 'Show', article_path(art), class: "btn btn-link btn-xs" %></td>
  <td><%= link_to 'Edit', edit_article_path(art), class: "btn btn-link btn-xs" %></td>
  <td><%= link_to 'Delete', article_path(art), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link btn-xs" %></td>
  </tr>
  <% end %>
</table>